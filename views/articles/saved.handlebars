        <div class="card">
            <h5 class="card-header">Saved Articles</h5>
            <div class="card-body" id="top-articles">
                {{#each articles }}
                {{#if saved}}
                <div class="articles">
                    {{!-- <h4>{{ title }}</h4> --}}
                    <p data-id="{{ _id }}">{{ title }}</p>
                    <p>{{ saved }}</p>
                    <p>
                        <a href="{{ link }}" target="_blank">{{ link }}</a>
                    </p>
                    <button class="btn btn-sm btn-primary my-2 my-sm-0 getNoteBtn" data-toggle="modal" data-target="#articleNoteModal">Notes</button>
                    <button class="btn btn-sm btn-primary my-2 my-sm-0 saveArticleBtn">Delete</button>
                </div>
                {{/if}}
